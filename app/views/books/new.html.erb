<%= form_for @book, :url => { :controller => 'books', :action => 'create' } do |f| %>
    <%= f.label :name, "BookName" %>
    <%= f.text_field :name %>

    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>

    <%= f.label :isbn, "ISBN" %>
    <%= f.text_field :isbn %>

    <%= f.submit "Create" %>
<% end %>