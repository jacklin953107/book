<%= form_for @book, :url => { :controller => 'books', :action => 'update', :id => @book } do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>

    <%= f.label :isbn, "ISBN" %>
    <%= f.text_field :isbn %>

    <%= f.submit "Update" %>
<% end %>